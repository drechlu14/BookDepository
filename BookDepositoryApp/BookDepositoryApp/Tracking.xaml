<Window x:Class="BookDepositoryApp.Tracking"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BookDepositoryApp"
        mc:Ignorable="d"
        Title="Tracking" Height="550" Width="725" WindowStartupLocation="CenterScreen" >
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="8*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <StackPanel>
            <Label x:Name="TrackingOrder" Content="Tracking order" FontSize="22" FontWeight="DemiBold" />
            <Label x:Name="TrackingOrderText" Content="Your order was successfully sent. You can go back to the shop." FontSize="20" FontWeight="DemiBold" />
        </StackPanel>

        <Button x:Name="buttonExit" Click="buttonExit_Click" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="10,0,0,10" Content="Back" Width="70" />
    </Grid>
</Window>
